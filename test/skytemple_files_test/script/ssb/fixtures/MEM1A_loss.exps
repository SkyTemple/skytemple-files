    message_SetFaceEmpty(2, FACE_PAIN, FACE_POS_BOTTOM_R_FACEOUTW);
    message_FacePositionOffset(0, 2);
    message_Monologue("(Why...?[K] Why did I think that anyone would\nbe willing to help me...?)");
    message_Monologue("(They didn't even say a word to me, and yet...[K]\nthrew themselves right at me...)");
    message_Monologue("(Were...[K]they even aware of what they were\ndoing?[K][U:1][VS:1:2] Or did I do something in the past\nto deserve this...?)[VR]");
    CallCommon(CORO_MESSAGE_CLOSE_WAIT_FUNC);
    WaitLockLives(6, 2);
    Wait(80);
    Unlock(3);
    WaitLockLives(8, 2);
    message_SetFaceEmpty(2, FACE_SAD, FACE_POS_BOTTOM_R_FACEINW);
    message_FacePositionOffset(0, 2);
    message_Monologue("(Though...[K]I guess trying again is better\nthan waiting for them to corner me here...)");
    message_KeyWait();
    Unlock(8);
    if(scn($SCENARIO_MAIN) == [152, 0])
    {
        message_Monologue("(Just avoid them all...[K]and I'll be fine...)");
    }
    else
    {
        message_Monologue("(Just sketch their moves...[K]and I'll be fine...)");
    }
    message_KeyWait();
    WaitLockLives(9, 2);
    message_Talk("[VS:2:3]I'll be fine...[K][U:9][VS:1:2]I'll be fine...[VR]");
    CallCommon(CORO_MESSAGE_CLOSE_WAIT_FUNC);
    WaitLockLives(10, 2);
    Wait(60);
    Unlock(10);
    Lock(20);
    Wait(60);
    screen_FadeOutAll(0, 60);
    CallCommon(CORO_DEBUG_SCENE);
    WaitScreenFadeAll();
    CallCommon(CORO_DEBUG_FLAG_SETTING_PUPURIN);
    Wait(90);
    end;
}

