    Wait(90);
    CallCommon(CORO_DEBUG_FLAG_SETTING_PUPURIN);
    CallCommon(CORO_FADE_OUT_ALL_AFTER);
    message_Mail("[CN]Your progress will now be saved.[K]\n[CN]Afterward, you will return to the Top Menu.");
    message_Mail("[CN]Whenever you load the save file,\n[CN]you will be able to access the Debug Menu\n[CN]used when making this hack.[K] Enjoy!");
    message_Close();
    $SCENARIO_MAIN_BIT_FLAG[6] = 1;
    $SCENARIO_MAIN_BIT_FLAG[8] = 1;
    $COMPULSORY_SAVE_POINT = 255;
    $DUNGEON_PRESENT_LIST[255] = 0;
    ProcessSpecial(79, 0x5E, 0x64);
    message_Menu(MENU_SAVE_MENU);
    switch ( ProcessSpecial(PROCESS_SPECIAL_JUMP_TO_TITLE_SCREEN, 0, 0) ) { }
    end;
}

def 1 for_performer(0)
{
    camera_SetMyself();
    SetPositionOffset(1, 0);
    Lock(0);
    forever
    {
        if not($SCENARIO_TALK_BIT_FLAG[0])
        {
            SetPositionOffset(264, 0);
        }
        else
        {
            $SCENARIO_TALK_BIT_FLAG[0] = 0;
            ~WaitUnlockMain();
            SetPositionOffset(264, 192);
        }
        Wait(7);
        if not($SCENARIO_TALK_BIT_FLAG[0])
        {
            SetPositionOffset(264, 0);
        }
        else
        {
            $SCENARIO_TALK_BIT_FLAG[0] = 0;
            ~WaitUnlockMain();
            SetPositionOffset(264, 192);
        }
        Wait(7);
        if not($SCENARIO_TALK_BIT_FLAG[0])
        {
            SetPositionOffset(-528, 0);
        }
        else
        {
            $SCENARIO_TALK_BIT_FLAG[0] = 0;
            ~WaitUnlockMain();
            SetPositionOffset(-528, 192);
        }
        Wait(7);
        continue;
    }
    hold;
}
