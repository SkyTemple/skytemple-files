macro credits_loop($level, $duration)
{
    back_SetGround($level);
    supervision_Acting(0);
    ~WaitUnlockPerformer(0, 0);
    CallCommon(CORO_COMMON_ENTER);
    $EVENT_LOCAL = 0;
    $CRYSTAL_COLOR_03 = 0;
    $CRYSTAL_COLOR_02 = 0;
    while($CRYSTAL_COLOR_02 < $duration)
    {
        Wait(403); // was originally the custom opcode CheckInputStatus(0);
        switch($EVENT_LOCAL)
        {
            default:
            case 0:
                Wait(1);
                break;
            case 0x1:
            case 0x2:
                $CRYSTAL_COLOR_02 += 1;
                if($CRYSTAL_COLOR_02 >= $duration)
                {
                    break;
                }
                se_Play(5124);
                $SCENARIO_TALK_BIT_FLAG[0] = 1;
                Lock(20);
                Wait(1);
        }
    }
    CallCommon(CORO_DEBUG_ENTER);
}

